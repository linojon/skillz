- body_id 'home_page'

- unless signed_in?
  .signin_panel
    .signup
      %h2
        Sign up
      = simple_form_for User.new do |f|
        = f.error_messages
        = f.input :email, :required => false, :input_html => { :value => '' }
        = f.input :password, :required => false, :input_html => { :value => '' }
        = f.input :password_confirmation, :required => false, :label => 'Confirm Password'
        = f.submit 'Create account', :class => 'button'
      %p
        &nbsp;
  
    .signin
      %h2
        Sign in
      = simple_form_for UserSession.new do |f|
        = f.error_messages
        = f.input :email, :required => false, :input_html => { :value => '' }
        = f.input :password, :required => false, :input_html => { :value => '' }
        = f.input :remember_me, :required => false, :label => 'Stay signed in', :as => :boolean
        = f.submit 'Sign in', :class => 'button'
      %p
        = link_to "Can't access your account?", new_password_reset_path
      - content_for :javascript_ready do
        $('#user_email').attr("value", "");
        $('#user_password').attr("value", "");

