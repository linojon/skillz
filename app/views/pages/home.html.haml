- body_id 'home_page'

%h2
  Plant your flag!
%h3
  Claim your skills!
#user_action
  = form_tag signup_path, :method => :get do
    %p
      = label_tag :zipcode, 'Enter your zipcode:'
      = text_field_tag :zipcode, nil, :style => 'width:75px'
    %p
      = submit_tag 'Skill me!', :class => 'button'
