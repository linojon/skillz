- title "Sign in", false

.signin
  %h2
    Sign in
  = simple_form_for @user_session do |f|
    = f.error_messages
    = f.input :email, :required => false
    = f.input :password, :required => false
    = f.input :remember_me, :required => false, :label => 'Stay signed in', :as => :boolean
    = f.submit 'Sign in', :class => 'button'
  %p
    = link_to "Can't access your account?", new_password_reset_path
    
    
%p 
  Don't have an account? 
  = #{link_to "Sign up!", signup_path}

